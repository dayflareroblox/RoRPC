{
	"compilerOptions": {
		"outDir": "./dist",
		"allowJs": true,
		"module": "nodenext",
		"target": "es2015",
		"strict": true,
		"lib": ["es2017", "es7", "es6", "dom"],
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"declaration": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["./node_modules", "./dist"]
}